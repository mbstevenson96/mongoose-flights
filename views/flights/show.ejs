<%- include('../partials/html-head') %> 
<link rel="stylesheet" href="/stylesheets/flights/show.css" />
<%- include('../partials/nav') %> 

<main>
  <h1>Flight Details</h1>
  <h3>Flight #<%= flight._id %></h3>
  <section>
    <p>Airline: <%= flight.airline %></p>
    <p>Airport: <%= flight.airport %></p>
    <p>Flight No.: <%= flight.flightNo %></p>
    <p>Departs: <%= flight.departs %></p>
    <a href="/flights/<%= flight._id %>/edit">
    <button>Edit Flight Details</button></a>
    <div>Meals:</div>
    <ul>
      <% flight.name.forEach(flightMeal => { %>
        <li><%= flightMeal.name %></li>
        <% }) %> 
    </ul>
  </section>
  <form id="add-per-to-meal" action="/flights/<%= flight._id %>/meals" method="POST">
    <select name="mealId">
      <% meals.forEach(meal => { %>
        <option value="<%= meal._id %>"><%= meal.name %></option>
      <% }) %>
    </select>
    <button type="submit">Add Meal</button>
  </form>
  <h2>Tickets</h2>
  <form 
    id="add-ticket-form"
    action="/flights/<%= flight._id %>/tickets"
    method="POST"
  >
    <label for="content-textarea">Seat:</label>
    <input type="text" name="seat" value="<%= flight.seat %>" required pattern="[A-F][1-9]\d?">
    <label for="rating-select">Price:</label>
    <input type="text" name="price" value="<%= flight.price %>">
    <button type="submit">Add Ticket</button>
  </form>
  <% if (flight.tickets.length) { %>
    <table>
      <thead>
        <tr>
          <th>Seat</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% flight.tickets.forEach(flight => { %>
          <tr>
            <td><%= flight.seat %></td>
            <td>$<%= flight.price %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <h3>No Ticket Information</h3>
  <% } %>
</main>

<%- include('../partials/footer') %> 
